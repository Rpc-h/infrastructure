# docker-compose file that allows RPCh exit node to run alongside HOPRd
version: "3"

volumes:
  exit-node-data:

networks:
  hoprnet:
    name: hoprnet
services:
  exit-node:
    restart: always
    mem_reservation: 1g
    mem_limit: 1g
    container_name: exit-node
    hostname: exit-node
    image: europe-west6-docker.pkg.dev/rpch-375921/rpch/exit-node:{{ rpch_exit_node_version }}
    volumes:
      - exit-node-data:{{ rpch_data_dir }}
    env_file:
        - .env-default
        - .env
    networks:
      - hoprnet
    logging:
      driver: "json-file"
      options:
        max-size: "100m"
        max-file: "7"

